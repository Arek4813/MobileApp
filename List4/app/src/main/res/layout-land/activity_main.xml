<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:background="@color/colorAccent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorAccent" android:id="@+id/mainLay">
        <Button
                android:text="SORT BY RATING  ASC"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/sortButton" android:onClick="sorter"
                android:textColor="@android:color/white" android:background="@android:color/black"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:id="@+id/LL1">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image1" android:id="@+id/imageView1"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image2" android:id="@+id/imageView2"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image3" android:id="@+id/imageView3"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:id="@+id/LL2" android:layout_marginTop="15dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image4" android:id="@+id/imageView4"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="47dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image5" android:id="@+id/imageView5"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/image6" android:id="@+id/imageView6"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>