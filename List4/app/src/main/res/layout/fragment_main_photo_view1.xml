<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="@color/colorAccent"
tools:context="PhotoActivity">

    <fragment android:layout_width="match_parent" android:layout_height="302dp"
              android:id="@+id/fragment_photo"
              android:name="com.example.galleryapp.withFrag.PhotoFragment"
              tools:layout="@layout/framgent_photo"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

    <fragment android:layout_width="match_parent" android:layout_height="204dp"
              android:id="@+id/fragment_rest"
              android:name="com.example.galleryapp.withFrag.RestFragment"
              tools:layout="@layout/fragment_rest"
              app:layout_constraintTop_toBottomOf="@+id/fragment_photo" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>